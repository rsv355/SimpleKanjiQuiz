<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="textViewMessageDialogStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22.0sp</item>
        <item name="android:shadowColor">#7F000000</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:textStyle">bold</item>
    </style>

     <style name="question_ui_textview">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18.0sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
      <style name="ans_btn_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18.0sp</item>
    </style>
    
    <style name="textViewHeaderDialogStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">26.0sp</item>
        <item name="android:shadowColor">#7F000000</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
    </style>

    <style name="big_white_font">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="mediam_white_font">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
        
</resources>